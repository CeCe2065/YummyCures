@model YummyCures.Models.ContentIndexViewModel

@{
    ViewBag.Title = "Contents";

}

<!--Copied carousel from home index-->

@section headerCarousel {
    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-color: gray"></div>
                <div class="carousel-caption">
                    <h2 class="quote">“Let food be thy medicine and medicine be thy food.” ~Hippocrates</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-color: gray"></div>
                <div class="carousel-caption">
                    <h2 class="quote">“No disease that can be treated by diet should be treated with any other means.” ~Maimonides</h2>

                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-color: gray"></div>
                <div class="carousel-caption">
                    <h2 class="quote">“Life expectancy would grow by leaps and bounds if green vegetables smelled as good as bacon.” ~Doug Larson</h2>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>
}

<!-- /.row -->
<hr>


<h2>Contents</h2>

<!-- Page Heading/Breadcrumbs -->
<div class="row">
        <div class="col-lg-12">
                <h1 class="page-header">                        
                        <small>VIDEOS</small>
                </h1>        
        </div>    
</div>
<div class="row">
    @foreach (var item in Model.Videos)
            {
<!-- Contents Row -->

        <div class="col-md-6 img-portfolio">
                <a href="@Url.Action("Details", new { id = item.ContentID })">
                    <img class="img-responsive img-hover" src="@(item.ThumbNailUrl ?? "http://placehold.it/700x400")" alt="">             
                </a>
                <h3>
                    @Html.ActionLink(item.Title, "Details", "Contents", new { id = item.ContentID }, new { })               
                </h3>          
        </div>
<!-- /.row-->
