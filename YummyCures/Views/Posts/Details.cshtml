        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(m => m.NewComment.CommentBody, new { htmlAttributes = new { @class = "form-control" } })
